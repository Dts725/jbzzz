//to reset element-ui default css
.el-upload {
  input[type="file"] {
    display: none !important;
  }
}

.el-upload__input {
  display: none;
}

//暂时性解决diolag 问题 https://github.com/ElemeFE/element/issues/2461
.el-dialog {
  transform: none;
  left: 0;
  position: relative;
  margin: 0 auto;
}

//element ui upload
.upload-container {
  .el-upload {
    width: 100%;
    .el-upload-dragger {
      width: 100%;
      height: 200px;
    }
  }
}

// 团队列表页面 成员管理弹窗修改element 样式
.memberTable {
  .el-dialog {
    width: 54%;
    height: 65%;
    overflow: auto;

  }
}

/**********************************************************************************/
// 日期选择、select选择 宽度调整
.el-select, .el-date-editor.el-input, .el-date-editor.el-input__inner {
  width: 100%;
}

.el-form-item {
  margin-bottom: 15px;
}

// form表单的 左边名字
.el-form-item__label {
  line-height: normal;
  height: 40px;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

//  弹窗的标题
.el-dialog__header {
  font-weight: bold;
  background-color: #f2f3f5;
}

// 弹窗的body
.el-dialog--center .el-dialog__body {
  padding: 20px 25px 30px;
}

/** 菜单样式 **/
body #app .menu-container .nest-menu .el-submenu > .el-submenu__title,
body #app .menu-container .el-submenu .el-menu-item {
  background-color: rgba(255,255,255, 0) !important;
  font-size:1.1rem;
  &:hover{
    background-color: #fff5f6 !important;
    border-left: 5px solid #cf010c !important;
    color: #cf010c !important;
  }
}

.menu-container {
  .el-menu-item, .el-submenu{
    border-left: 5px solid transparent;
    font-size:1.1rem;
    &:hover {
      background-color: #fff5f6 !important;
      border-left: 5px solid #cf010c !important;
      color: #cf010c !important;
    }
  }
  .el-submenu__title{
    font-size:1.1rem;
  }
  .el-menu{
    background-color: rgba(255,255,255, 0.6) !important;
  }
}

